@model UNIMEET.Models.Group

@{
    ViewData["Title"] = "Create";
}

<h1>Create new group</h1>

<div class="row">
    <div class="col-md-8">
        <div class="row">
                <div class="col-md">
                    <input id="group_name" class="form-control fieldLength" placeholder="Group name"/>
                </div>
                <div class="col-md">
                    <input value="Create your group" onclick="create_group_with_members()" spellcheck="false" class="btn btn-primary float-left"/>
                </div>
            </div>
        <br />
        <div class="row">
            <div class="col-md">
                <input id="searchbarContacts" class="form-control fieldLength" placeholder="Contact search" onkeyup="searchFriend()"/>
                <div id="contactsResult" class="fieldLength"></div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <p>Chosen contacts are displayed here</p>
        <ul id="selectedList" style="list-style-type: none"></ul>
    </div>
</div>