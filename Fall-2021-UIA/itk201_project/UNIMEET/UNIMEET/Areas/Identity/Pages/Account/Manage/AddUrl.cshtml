@page
@model AddUrl
@{
    ViewData["Title"] = "Manage Calendar Urls";
    ViewData["ActivePage"] = ManageNavPages.AddUrl;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <button asp-page-handler="ResendCalendarEmail" type="submit" class="btn btn-primary" >Resend calendar url</button>
            <button asp-page-handler="GenerateNewCalendarCode" type="submit" class="btn btn-primary" >Get new calendar url</button>
        </form>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.NewUrl"></label>
                <input asp-for="Input.NewUrl" class="form-control"/>
                <button asp-page-handler="NewUrl" type="submit" class="btn btn-primary">Add</button>
            </div>
            <div class="form-group">
                <label asp-for="Input.UrlId"></label>
                <select asp-for="Input.UrlId" asp-items="@(new SelectList(Model.Input.Urls, "Id", "Url"))" class="form-control"> <option value="0">--- SELECT ---</option></select>
            </div>
            <button asp-page-handler="DeleteUrl" type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>